{
  "tiers": {
    "tier1": ["github_actionlint_with_version", "github_btop_no_version", "github_argo-cd_binary", "github_bombardier_simple"],
    "tier2": ["archive_golang_directory", "archive_zig_tar_xz", "archive_rust_custom_source", "archive_nodejs_checksum", "archive_perl_relocatable"],
    "tier3": ["nix_hello-nix_simple"],
    "tier4": ["cask_iterm2-test_basic"],
    "tier5": ["npm_netlify-cli_basic", "npm_serve_empty_pattern", "pipx_ruff_basic", "pipx_black_multi_exec", "cargo_cargo-audit_basic", "cargo_cargo-watch_single", "gem_bundler_multi_exec", "gem_jekyll_single", "gem_fpm_packaging", "cpan_ack_with_dependency"]
  },
  "tests": {
    "github_actionlint_with_version":  { "tool": "actionlint",   "tier": 1, "desc": "github_archive with version", "features": ["action:github_archive", "verify:pattern_with_version"] },
    "github_btop_no_version":  { "tool": "btop",         "tier": 1, "desc": "github_archive no version",   "features": ["action:github_archive", "verify:pattern_without_version"] },
    "github_argo-cd_binary":  { "tool": "argo-cd",      "tier": 1, "desc": "github_file with binary",     "features": ["action:github_file", "binary_field"] },
    "github_bombardier_simple":  { "tool": "bombardier",   "tier": 1, "desc": "github_file simple",          "features": ["action:github_file"] },
    "archive_golang_directory": { "tool": "golang",       "tier": 2, "desc": "directory install",           "features": ["action:download_archive", "install_mode:directory", "version_detection:github_repo"] },
    "archive_zig_tar_xz": { "tool": "zig",          "tier": 2, "desc": "tar.xz install_dir",          "features": ["action:download_archive", "archive_format:tar.xz", "install_mode:directory"] },
    "archive_rust_custom_source": { "tool": "rust",         "tier": 2, "desc": "custom source",               "features": ["action:download_archive", "install_mode:directory"] },
    "archive_nodejs_checksum": { "tool": "nodejs",       "tier": 2, "desc": "checksum verification",       "features": ["action:download_archive", "checksum:with", "install_mode:directory"] },
    "cask_iterm2-test_basic": { "tool": "iterm2-test",  "tier": 4, "desc": "cask app bundle",            "features": ["version_detection:cask", "action:app_bundle", "platform:macos_only"], "recipe": "testdata/recipes/iterm2-test.toml" },
    "npm_netlify-cli_basic": { "tool": "netlify-cli",  "tier": 5, "desc": "npm_install",                 "features": ["action:npm_install", "version_detection:npm"] },
    "npm_serve_empty_pattern": { "tool": "serve",        "tier": 5, "desc": "npm_install empty pattern",   "features": ["action:npm_install", "verify:pattern_empty"] },
    "pipx_ruff_basic": { "tool": "ruff",         "tier": 5, "desc": "pipx_install",                "features": ["action:pipx_install", "version_detection:pypi"] },
    "pipx_black_multi_exec": { "tool": "black",        "tier": 5, "desc": "pipx_install multi-exec",     "features": ["action:pipx_install", "executables:multiple"] },
    "cargo_cargo-audit_basic": { "tool": "cargo-audit",  "tier": 5, "desc": "cargo_install",               "features": ["action:cargo_install", "version_detection:crates_io"] },
    "cargo_cargo-watch_single": { "tool": "cargo-watch",  "tier": 5, "desc": "cargo_install single",        "features": ["action:cargo_install"] },
    "gem_bundler_multi_exec": { "tool": "bundler",      "tier": 5, "desc": "gem_install multi-exec",      "features": ["action:gem_install", "version_detection:rubygems", "executables:multiple"] },
    "gem_jekyll_single": { "tool": "jekyll",       "tier": 5, "desc": "gem_install single",          "features": ["action:gem_install"] },
    "gem_fpm_packaging": { "tool": "fpm",          "tier": 5, "desc": "gem_install packaging",       "features": ["action:gem_install"] },
    "nix_hello-nix_simple": { "tool": "hello-nix",    "tier": 3, "desc": "nix_install simple",          "features": ["action:nix_install", "version_detection:nixpkgs", "platform:linux_only", "bootstrap:nix_portable"] },
    "archive_perl_relocatable": { "tool": "perl",         "tier": 2, "desc": "relocatable perl runtime",    "features": ["action:download_archive", "install_mode:directory", "bootstrap:relocatable_perl"] },
    "cpan_ack_with_dependency": { "tool": "ack",          "tier": 5, "desc": "cpan_install with dependency", "features": ["action:cpan_install", "version_detection:metacpan", "dependency:perl"] },
    "archive_go_toolchain": { "tool": "go",           "tier": 2, "desc": "go toolchain",               "features": ["action:download_archive", "install_mode:directory", "version_detection:go_toolchain"] },
    "go_gofumpt_with_dependency": { "tool": "gofumpt",      "tier": 5, "desc": "go_install with dependency", "features": ["action:go_install", "version_detection:goproxy", "dependency:go"] }
  },
  "ci": {
    "linux": ["github_actionlint_with_version", "github_btop_no_version", "github_argo-cd_binary", "github_bombardier_simple", "archive_golang_directory", "archive_nodejs_checksum", "npm_netlify-cli_basic", "pipx_ruff_basic", "gem_bundler_multi_exec", "archive_perl_relocatable"],
    "macos": ["github_actionlint_with_version", "github_argo-cd_binary", "archive_golang_directory", "archive_nodejs_checksum"],
    "scheduled": ["archive_rust_custom_source", "cargo_cargo-audit_basic", "cpan_ack_with_dependency", "archive_go_toolchain", "go_gofumpt_with_dependency"],
    "blocked": {}
  }
}
